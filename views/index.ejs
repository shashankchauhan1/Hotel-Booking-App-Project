<%- include('partials/header') %>

<div class="hero">
    <h1>Find Your Next Stay</h1>
    <p>Discover the best hotels at the best prices.</p>
    <form action="/hotels" method="GET">
        <input type="search" name="search" placeholder="Search for a location..." required>
        <button type="submit" class="btn">Search</button>
    </form>
</div>

<div class="featured-hotels">
    <h2>Featured Destinations</h2>
    <!-- You can dynamically add featured hotels here later -->
    <div class="hotel-grid">
        <div class="card">
            <img src="https://assets.hyatt.com/content/dam/hyatt/hyattdam/images/2022/04/14/0032/DENTH-P0070-Exterior-Corner-View-Sunset.jpg/DENTH-P0070-Exterior-Corner-View-Sunset.4x3.jpg">
            <div class="card-body">
                <h3>A Thompson Hotel</h3>
                <p>New York, USA</p>
            </div>
        </div>
        <div class="card">
            <img src="https://cdn.britannica.com/68/250068-050-B0AD857A/Burj-Al-Arab-luxury-hotel-Dubai.jpg" alt="Seaside Resort">
            <div class="card-body">
                <h3>Jumeirah Burj Al Arab</h3>
                <p>Umm Suqeim 3,Dubai, UAE</p>
            </div>
        </div>
        <div class="card">
            <img src="https://static.toiimg.com/photo/96586840.cms" alt="The Taj Mahal Palace">
            <div class="card-body">
                <h3>The Taj Mahal Palace</h3>
                <p>Mumbai, India</p>
            </div>
        </div>
    </div>
</div>

